<Page
    actionBarHidden="true"
    loaded="onLoaded" 
    navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <GridLayout rows="20,*,auto,auto,30,auto,auto,auto,*,30" marginRight="20" marginLeft="20">
        <Image src="res://logo" stretch="aspectFill" row="2" textAlignment="center" loadMode="async" />
        <Label text="Send message whatsapp without save the number" textWrap="true" class="label-title" textAlignment="center" row="3" />
        <TextField hint="Whatsapp Number" class="input-number" keyboardType="phone" text="{{ phone_number }}" maxLength="25" row="5" />
        <Label text="How to write valid whatsapp number?" tap="infoTap" textWrap="true" textAlignment="center" row="6" fontSize="15" color="#f44336" paddingTop="10" paddingBottom="20" />
        <Button text="Start to send message" class="btn-whatsapp" row="7" tap="openApps" />
    </GridLayout>
</Page>
